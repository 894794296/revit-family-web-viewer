{
    "version": "0.2.0",
    "configurations": [
        {
            "type"      : "chrome",
            "request"   : "launch",
            "name"      : "Launch Chrome",
            "url"       : "file:///${workspaceFolder}/dist/index.html",
            "webRoot"   : "${workspaceRoot}",
            "runtimeArgs": [
                "--allow-file-access-from-files",
                "--disable-web-security",
                " --user-data-dir"
            ]
        },
        {
            "type"      : "firefox",
            "request"   : "launch",
            "name"      : "Launch Firefox",
            "reAttach"  : true,
            "file"      : "${workspaceFolder}/dist/index.html",
            "webRoot"   : "${workspaceRoot}",
            "windows": {
                "file"      : "${workspaceRoot}\\dist\\index.html"
            }
        }
    ]
}