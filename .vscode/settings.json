{
    // Exclude files from VS Code's file explorer
    "files.exclude": {
        "**/node_modules"       : true,
        "**/yarn.lock"          : true
    },

    // Easy SASS (VS Code) extension's settings
    "easysass.excludeRegex"     : "^(?!main.scss).+",
    "easysass.targetDir"        : "dist/css"
}